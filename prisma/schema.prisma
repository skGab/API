generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model tasks {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  complete  Boolean? @default(false)
  text      String
  timestamp DateTime? @default(now())
  userID    String
}

model userinfos {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
  user     String
}
